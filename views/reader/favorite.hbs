<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> 首页</a></li>
        <li class="active">我的收藏
            <small class="text-danger">(共{{count}}篇)</small>
        </li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                        我的收藏
                    </h3>
                </div>
                <div class="box-body">
                    <table class="table table-hover">
                        <tbody>
                        {{#each articles}}
                            {{> index-article favorites=../reader.favorites article=this session=../session }}
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>